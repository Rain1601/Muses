# 环境配置
ENVIRONMENT=development
DEBUG=True
HOST=localhost
PORT=8080
FRONTEND_URL=http://localhost:3004
# 生产环境使用: FRONTEND_URL=https://muses.ink

# 数据库配置
DATABASE_URL=sqlite:///./muses.db

# GitHub OAuth配置 (必须配置)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# JWT配置
JWT_SECRET=muses_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=168

# 数据加密配置 (必须配置)
ENCRYPTION_KEY=your_32_character_encryption_key_here_123456
ENCRYPTION_SALT=muses_encryption_salt

# OpenAI配置 (可选，可在界面中配置)
OPENAI_API_KEY=your_openai_api_key_here

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# 开发模式配置
LOG_LEVEL=debug